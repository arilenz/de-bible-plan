{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noLib": false,
    "lib": ["es6", "esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "stripInternal": true,
    "target": "es6",
    "types": ["node"]
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "dist"]
}
